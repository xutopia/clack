{
  "name": "clack",
  "version": "1.0.0",
  "description": "A slack clone with surprise features",
  "main": "src/index.js",
  "scripts": {
    "start": "yarn dev:start",
    "dev:wds": "webpack-dev-server",
    "dev:start": "NODE_ENV=development PORT=3000 nodemon --ignore lib --exec babel-node server/index.js --presets es2015,stage-2",
    "prod:build-server": "rimraf lib && babel --plugins transform-regenerator --presets env server -d lib",
    "prod:build-client": "rimraf dist/bundle.js && webpack -p",
    "prod:start": "NODE_ENV=production PORT=8080 pm2 start lib/entry.js --name server && pm2 logs",
    "prod:stop": "pm2 delete server",
    "serve": "serve dist --cors --port 80 --proxy",
    "debug": "babel-node --nolazy --debug=5858 server/index.js --presets es2015,stage-2",
    "lint": "eslint ./src ./server -f table || true",
    "test": "jest --forceExit",
    "test-watch": "jest --watch-all --coverage"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/(dist|coverage)/"
    ],
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asyncApes/clack.git"
  },
  "keywords": [
    "slack",
    "communication",
    "collaboration",
    "teamChat"
  ],
  "author": "Michelle Carter, Peter Schussheim, Tony Xu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/asyncApes/clack/issues"
  },
  "homepage": "https://github.com/asyncApes/clack#readme",
  "dependencies": {
    "axios": "^0.15.3",
    "bcryptjs": "^2.4.3",
    "btoa": "^1.1.2",
    "chalk": "^1.1.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "dateformat": "^2.0.0",
    "dotenv": "^4.0.0",
    "koa": "^1.2.5",
    "koa-bodyparser": "2",
    "koa-logger": "^1.3.1",
    "koa-router": "^5.4.0",
    "koa-send": "^3.3.0",
    "koa-session": "^3.4.0",
    "koa-socket": "^4.4.0",
    "linkifyjs": "^2.1.4",
    "lunr": "^1.0.0",
    "moment": "^2.17.1",
    "react": "^15.4.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router-dom": "^4.0.0-beta.6",
    "react-typewriter": "^0.4.1",
    "react-web-notification": "^0.2.3",
    "redux": "^3.6.0",
    "redux-act": "^1.1.0",
    "redux-devtools-extension": "^2.13.0",
    "redux-logger": "^2.8.1",
    "redux-promise": "^0.5.3",
    "redux-saga": "^0.14.3",
    "semantic-ui-react": "^0.66.0",
    "socket.io": "^1.7.2",
    "socket.io-client": "^1.7.3",
    "url-loader": "^0.5.7"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.13.2",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-regenerator": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-airbnb": "^2.2.3",
    "babel-preset-env": "^1.2.2",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.13.0",
    "babel-register": "^6.24.0",
    "css-loader": "^0.23.1",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-redux-saga": "^0.3.0",
    "file-loader": "^0.10.0",
    "jest": "^18.1.0",
    "jest-cli": "^18.1.0",
    "localStorage": "^1.0.3",
    "nodemon": "^1.11.0",
    "pm2": "^2.4.2",
    "postcss-loader": "^0.9.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "rimraf": "^2.6.1",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
